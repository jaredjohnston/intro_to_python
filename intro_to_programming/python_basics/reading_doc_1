'Aloha, World!'.lower() # 'aloha, world!'

text = 'Aloha, World!'

left_justified_ljust = text.ljust(10)
print(f"Using ljust: '{left_justified_ljust}'")

text = 'hello'
reversed_text = text[::-1]
print(reversed_text)
